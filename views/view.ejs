<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Portfolios</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="container portfolio-view-page">
        <h1>Your Portfolios</h1>

        <a href="/portfolio/upload">Upload a new portfolio</a>

        <div>
            <% if (portfolios.length > 0) { %>
                <ul>
                    <% portfolios.forEach(portfolio => { %>
                        <li>
                            <h2><%= portfolio.title %></h2>
                            <p><%= portfolio.description %></p>
                            <p><strong>Skills:</strong> <%= portfolio.skills.join(', ') %></p>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <p>You haven't uploaded any portfolios yet. <a href="/portfolio/upload">Upload one now!</a></p>
            <% } %>
        </div>
    </div>
</body>
</html>
